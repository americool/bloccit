<h1> Edit Question</h1>
  <div class = "row">
    <div class="col-md-4">
      <p> Edit Questions!!!</p>
      <ul>
        <li>Don't be a jerk </li>
        <li> No...really. </li>
      </ul>
    </div>


    <div class = "col-md-8">
      <%= form_for @question do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control', placeholder: "Edit Title" %>
        </div>

        <div class="form-group">
          <%=f.label :body %>
          <%=f.text_area :body, rows: 6, class: 'form-control', placeholder: "Edit Question"%>
        </div>

        <div class = "form-group">
          <%= f.submit "Save", class: 'btn btn-success' %>
        </div>
      <%end%>
    </div>
  </div>
