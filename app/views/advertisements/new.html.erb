<h1>Make a New Ad!</h1>

<div class = "col-md-8">
  <%= form_for @advertisement do |f| %>
    <div class = "form-group" >
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control',
        placeholder: "Enter Ad Title" %>
    </div>
    <div class = "form-group" >
      <%= f.label :price %>
      <%= f.text_field :price, class: 'form-control',
        placeholder: "Enter Ad Price" %>
    </div>
    <div class = "form-group" >
      <%= f.label :copy %>
      <%= f.text_area :copy, rows: 10, class: 'form-control',
        placeholder: "Enter Ad Copy" %>
    </div>
    <div class = "form-group">
      <%= f.submit "Save", class: 'btn btn-success' %>
    </div>
  <%end%>
</div>
